<nav class="site-nav">
    <div class="site-nav-left">
        {{#if @site.logo}}
            <a class="site-nav-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
        {{else}}
            <a class="site-nav-logo" href="{{@site.url}}">{{@site.title}}</a>
        {{/if}}
        <div class="site-nav-content">
            {{#if @site.navigation}}
                {{navigation}}
            {{/if}}
            {{#is "post"}}
                <span class="nav-post-title {{#unless @site.logo}}dash{{/unless}}">{{post.title}}</span>
            {{/is}}
        </div>
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            {{#if @site.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @site.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
            <a class="social-link social-link-tw" href="https://www.linkedin.com/in/ericlarch/" title="Linked In" target="_blank" rel="noopener">{{> "icons/linkedin"}}</a>
            <a class="social-link social-link-tw" href="https://www.instagram.com/elarch/" title="Instagram" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
            <a class="social-link social-link-tw" href="https://www.youtube.com/EricLarcheveque" title="YouTube" target="_blank" rel="noopener">{{> "icons/youtube"}}</a>
            <a class="social-link social-link-tw" href="https://www.tiktok.com/@eric.larcheveque" title="TikTok" target="_blank" rel="noopener">{{> "icons/tiktok"}}</a>
        </div>
    </div>
</nav>
